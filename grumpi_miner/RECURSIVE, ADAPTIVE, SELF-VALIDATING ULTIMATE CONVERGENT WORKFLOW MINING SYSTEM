import requests, json
class ModelRegistryMCP:
    def __init__(self, api_url):
        self.api = api_url
        self.models = {}
        self.prior = {}
    def poll(self):
        resp = requests.get(self.api + "/models")
        for m in resp.json():
            if m['name'] not in self.models:
                self.models[m['name']] = m
                self.prior[m['name']] = 1.0 / len(resp.json())
